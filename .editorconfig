# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

indent_style = tab
indent_size = 4

[*.{js, ts}]
charset = utf-8
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 4
